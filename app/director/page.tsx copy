'use client'

import { useState, useEffect, useRef } from 'react'
import { useRouter } from 'next/navigation'
import { supabase } from '@/lib/supabase'

interface Message {
  role: 'user' | 'assistant'
  content: string
}

export default function DirectorPage() {
  const router = useRouter()
  const [user, setUser] = useState<any>(null)
  const [loading, setLoading] = useState(true)

  const [messages, setMessages] = useState<Message[]>([
    {
      role: 'assistant',
      content: "Hi. I'm Director. Tell me what you're thinking about making."
    }
  ])

  const [input, setInput] = useState('')
  const [thinking, setThinking] = useState(false)

  const messagesEndRef = useRef<HTMLDivElement>(null)

  /* ------------------ AUTH + LOAD ------------------ */

  useEffect(() => {
    checkAuth()

    const saved = localStorage.getItem('directorConversation')
    if (saved) {
      try {
        const parsed = JSON.parse(saved)
        if (Array.isArray(parsed)) {
          setMessages(
            parsed.filter(
              (m: any) =>
                m &&
                (m.role === 'user' || m.role === 'assistant') &&
                typeof m.content === 'string'
            )
          )
        }
      } catch {
        // ignore corrupted history
      }
    }
  }, [])

  const checkAuth = async () => {
    const { data } = await supabase.auth.getUser()
    if (!data.user) {
      router.push('/login')
      return
    }
    setUser(data.user)
    setLoading(false)
  }

  /* ------------------ SCROLL + SAVE ------------------ */

  useEffect(() => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' })
    if (messages.length > 1) {
      localStorage.setItem('directorConversation', JSON.stringify(messages))
    }
  }, [messages])

  /* ------------------ SEND ------------------ */

  const handleSend = async () => {
    if (!input.trim() || thinking) return

    const userMessage: Message = { role: 'user', content: input.trim() }
    setMessages((prev) => [...prev, userMessage])
    setInput('')
    setThinking(true)

    try {
      const response = await fetch('/api/director', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          toolType: 'LuxPixPro', // âœ… VALID TOOL TYPE
          messages: [...messages, userMessage]
        })
      })

      if (!response.ok) {
        throw new Error('Director API failed')
      }

      const data = await response.json()

      const assistantMessage: Message = {
        role: 'assistant',
        content:
          typeof data.message === 'string'
            ? data.message
            : 'Director responded, but nothing usable came back.'
      }

      setMessages((prev) => [...prev, assistantMessage])
    } catch {
      setMessages((prev) => [
        ...prev,
        {
          role: 'assistant',
          content: 'Something went wrong on my end. Try again in a moment.'
        }
      ])
    } finally {
      setThinking(false)
    }
  }

  /* ------------------ CLEAR ------------------ */

  const clearChat = () => {
    if (!confirm('Clear this conversation and start fresh?')) return
    localStorage.removeItem('directorConversation')
    setMessages([
      {
        role: 'assistant',
        content: 'All clear. What are you thinking about making?'
      }
    ])
  }

  /* ------------------ RENDER ------------------ */

  if (loading) {
    return (
      <div className="min-h-screen bg-gray-900 text-white flex items-center justify-center">
        Loadingâ€¦
      </div>
    )
  }

  return (
    <div className="min-h-screen bg-gray-900 text-white flex flex-col">
      {/* Header */}
      <header className="border-b border-gray-800 px-6 py-4 flex items-center justify-between">
        <div className="flex items-center gap-3">
          <span className="text-3xl">ðŸŽ¬</span>
          <div>
            <h1 className="text-2xl font-bold">Director</h1>
            <p className="text-sm text-gray-400">
              Production-first project framing
            </p>
          </div>
        </div>

        <div className="flex items-center gap-4">
          <button
            onClick={clearChat}
            className="text-sm text-gray-400 hover:text-white"
          >
            Clear
          </button>

          <span className="text-sm text-gray-400">{user.email}</span>

          <button
            onClick={() => router.push('/dashboard')}
            className="px-4 py-2 bg-gray-800 rounded-lg hover:bg-gray-700"
          >
            Dashboard
          </button>
        </div>
      </header>

      {/* Messages */}
      <div className="flex-1 overflow-y-auto p-6 space-y-6">
        {messages.map((msg, i) => (
          <div
            key={i}
            className={`flex ${
              msg.role === 'user' ? 'justify-end' : 'justify-start'
            }`}
          >
            <div
              className={`max-w-2xl px-6 py-4 rounded-2xl ${
                msg.role === 'user'
                  ? 'bg-purple-600 text-white'
                  : 'bg-gray-800 text-gray-100'
              }`}
            >
              {msg.role === 'assistant' && (
                <div className="text-xs text-gray-400 mb-2">
                  ðŸ¤– Director
                </div>
              )}
              <div className="whitespace-pre-wrap">{msg.content}</div>
            </div>
          </div>
        ))}

        {thinking && (
          <div className="text-gray-500 text-sm">Director is thinkingâ€¦</div>
        )}

        <div ref={messagesEndRef} />
      </div>

      {/* Input */}
      <div className="border-t border-gray-800 p-6">
        <div className="max-w-4xl mx-auto flex gap-3">
          <input
            value={input}
            onChange={(e) => setInput(e.target.value)}
            onKeyDown={(e) => {
              if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault()
                handleSend()
              }
            }}
            placeholder="Describe the project ideaâ€¦"
            className="flex-1 bg-gray-800 border border-gray-700 rounded-xl px-6 py-4 text-white"
            disabled={thinking}
          />

          <button
            onClick={handleSend}
            disabled={thinking || !input.trim()}
            className="px-8 py-4 bg-purple-600 rounded-xl font-bold disabled:opacity-50"
          >
            Send
          </button>
        </div>
      </div>
    </div>
  )
}
